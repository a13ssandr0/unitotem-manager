function human_readable_size(size, precision=3){
    var unit;
    for(unit of ['B','KiB','MiB','GiB','TiB']){
        if (size < 1024.0)
            break;
        size /= 1024.0;
    }
    return size.toPrecision(precision) + unit;
}


{% macro confirmModal() %}
    <div class="modal fade" id="confirmModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </div>
{% endmacro%}


{% macro newAssetModal() %}
    <div class="modal fade" id="newAssetModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="newAssetModalLabel">New asset</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="modal_input_name" placeholder="Name">
                        <label for="modal_input_name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="url" class="form-control" id="modal_input_url" placeholder="Url">
                        <label for="modal_input_url">Url</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="modal_input_duration" min="0">
                        <label for="modal_input_duration">Duration</label>
                        <small class="ms-3">Set this to 0 to display indefinitely</small>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="datetime-local" class="form-control" id="modal_input_start" placeholder="Start">
                        <label for="modal_input_start">Enable date</label>
                    </div>
                    <div class="form-floating">
                        <input type="datetime-local" class="form-control" id="modal_input_stop" placeholder="Stop">
                        <label for="modal_input_stop">Disable date</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="add_asset_btn" class="btn btn-primary" data-bs-dismiss="modal">Add asset</button>
                </div>
            </div>
        </div>
    </div>
{% endmacro%}

{% macro messageModal() %}
    <div class="modal fade" id="messageModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messageModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"><h6></h6><code style="white-space: pre-wrap"></code></div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro newFileModal()%}
